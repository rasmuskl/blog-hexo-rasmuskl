.archive-title
  color #333
  font-weight normal
  padding-top .5em
  padding-bottom .5em 
  &:before
    font-family font-icon
    content '\f073'
    padding-right 0.5em

  &.tag
    &:before
      content '\f02b'

.archive
  margin-bottom 50px
  article
    padding-top 1em
    padding-bottom 1em
    border-bottom 1px solid #ccc
    .post-content
      margin-bottom 0
