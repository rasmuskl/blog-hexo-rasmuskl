*
  margin 0
  padding 0

body
  background color-background
  color color-font
  font-family font-default
  font-size 20px
  text-shadow 0 0 1px transparent
  @media screen and (max-width: 600px)
    font-size 16px

h1, h2, h3, h4, h5, h6
  font-family font-title

h1
  font-size 1.6em

h2
  font-size 1.4em

h3
  font-size 1.3em

a
  text-decoration none
  color color-link
  &:hover
    text-decoration underline

.alignleft
  float left

.alignright
  float right

.clearfix
  clearfix()

.inner
  width page-width
  margin 0 auto
  @media screen and (max-width: 900px) 
    width 100%

.inner > *
  padding 10px 

#content
  margin-top: 1em
